{
  "scripts": {
    "generate:openapi": "node scripts/generate-openapi.js",
    "generate:json": "node scripts/generate-openapi.js yaml-to-json -i spec/openapi.yaml -o spec/openapi.json",
    "generate:yaml": "node scripts/generate-openapi.js json-to-yaml -i spec/openapi.json -o spec/openapi.yaml",
    "validate:openapi": "node scripts/generate-openapi.js validate -f spec/openapi.yaml",
    "generate:types": "node scripts/generate-openapi.js generate-types -i spec/openapi.yaml -o src/types/api.ts",
    "watch:openapi": "node scripts/generate-openapi.js watch",
    "build:spec": "npm run generate:json && npm run validate:openapi && npm run generate:types"
  },
  "devDependencies": {
    "yaml": "^2.3.4",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "js-yaml": "^4.1.0"
  },
  "bin": {
    "bl1nk-generate-openapi": "./scripts/generate-openapi.js"
  }
}